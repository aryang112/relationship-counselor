{
  "name": "relation-counselor",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "backend",
    "frontend",
    "workers",
    "shared"
  ],
  "scripts": {
    "dev:backend": "npm run start:dev --workspace=backend",
    "dev:workers": "npm run start:dev --workspace=workers",
    "dev:frontend": "npm run start --workspace=frontend",
    "test": "npm run test --workspaces",
    "build": "npm run build --workspaces",
    "clean": "rm -rf node_modules backend/node_modules frontend/node_modules workers/node_modules shared/node_modules"
  },
  "devDependencies": {
    "prettier": "^3.0.0",
    "eslint": "^8.50.0"
  }
}
